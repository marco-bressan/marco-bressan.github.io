@article{mcdaid_paracetamol_2010,
	title = {Paracetamol and selective and non-selective non-steroidal anti-inflammatory drugs ({NSAIDs}) for the reduction of morphine-related side effects after major surgery: a systematic review},
	volume = {14},
	issn = {ISSN: 2046-4924},
	shorttitle = {Paracetamol and selective and non-selective non-steroidal anti-inflammatory drugs ({NSAIDs}) for the reduction of morphine-related side effects after major surgery},
