	year = {2017},
	pages = {519--541},
	file = {PDF:/home/marco/Zotero/storage/V6CEGDPS/Pierce e Bellio - 2017 - Modern Likelihood‐Frequentist Inference.pdf:application/pdf},
}

@article{riley_multivariate_2009,
	title = {Multivariate {Meta}-{Analysis}: {The} {Effect} of {Ignoring} {Within}-{Study} {Correlation}},
	volume = {172},
	copyright = {https://academic.oup.com/journals/pages/open\_access/funder\_policies/chorus/standard\_publication\_model},
	issn = {0964-1998, 1467-985X},
	shorttitle = {Multivariate {Meta}-{Analysis}},
	url = {https://academic.oup.com/jrsssa/article/172/4/789/7084529},
	doi = {10.1111/j.1467-985X.2008.00593.x},
	abstract = {Multivariate meta-analysis allows the joint synthesis of summary estimates from multiple end points and accounts for their within-study and between-study correlation. Yet practitioners usually meta-analyse each end point independently. I examine the role of within-study correlation in multivariate meta-analysis, to elicit the consequences of ignoring it. Using analytic reasoning and a simulation study, the within-study correlation is shown to inﬂuence the ‘borrowing of strength’ across end points, and wrongly ignoring it gives meta-analysis results with generally inferior statistical properties; for example, on average it increases the mean-square error and standard error of pooled estimates, and for non-ignorable missing data it increases their bias. The inﬂuence of within-study correlation is only negligible when the within-study variation is small relative to the between-study variation, or when very small differences exist across studies in the within-study covariance matrices.The ﬁndings are demonstrated by applied examples within medicine, dentistry and education. Meta-analysts are thus encouraged to account for the correlation between end points. To facilitate this, I conclude by reviewing options for multivariate meta-analysis when within-study correlations are unknown; these include obtaining individual patient data, using external information, performing sensitivity analyses and using alternatively parameterized models.},
	language = {en},
	number = {4},
	urldate = {2025-07-31},
	journal = {Journal of the Royal Statistical Society Series A: Statistics in Society},
	author = {Riley, Richard D.},
	
	year = {2009},
	pages = {789--811},
	file = {PDF:/home/marco/Zotero/storage/VJJX4RR8/Riley - 2009 - Multivariate Meta-Analysis The Effect of Ignoring Within-Study Correlation.pdf:application/pdf},
}

